{
  "name": "nuxt3-starter-kit",
  "private": true,
  "version": "0.1.0",
  "description": "This Nuxt 3 Starter Kit is the plug and play solution for all your developer needs. We're talking: different Environments, Testing, Staging, Typing, Linting n'Everything already pre-configured. Heck, I even added full-fledged demo components! Everything to bring you up to speed",
  "author": "Denis Steinhorst",
  "scripts": {
    "dev": "nuxt dev --dotenv .env.development",
    "preview:staging": "nuxt preview --dotenv .env.staging",
    "preview:production": "nuxt preview --dotenv .env.production",
    "build:staging": "nuxi build --dotenv .env.staging",
    "build:production": "nuxi build --dotenv .env.production",
    "generate:staging": "nuxi generate --dotenv .env.staging",
    "generate:production": "nuxi generate --dotenv .env.production",
    "lint": "pnpm lint:js && pnpm lint:prettier",
    "lintfix": "prettier --write --list-different . && pnpm lint:js --fix",
    "lint:js": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "story": "histoire dev --dotenv .env.local",
    "story:build": "histoire build --dotenv .env.production",
    "story:preview": "histoire preview --dotenv .env.staging",
    "test:unit": "vitest -c ./vitest.config.unit.js",
    "test:unit-ui": "vitest --ui -c ./vitest.config.unit.js",
    "test:e2e": "vitest -c ./vitest.config.e2e.js",
    "test:e2e-ui": "vitest --ui -c ./vitest.config.e2e.js",
    "coverage": "vitest run --coverage",
    "postinstall": "nuxt prepare",
    "cleanup": "nuxi clean"
  },
  "devDependencies": {
    "@histoire/plugin-nuxt": "^0.15.9",
    "@histoire/plugin-vue": "^0.15.8",
    "@nuxt/content": "^2.9.0",
    "@nuxt/schema": "^3.8.2",
    "@nuxt/test-utils": "^3.8.1",
    "@nuxt/types": "^2.17.2",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/i18n": "8.0.0-beta.11",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.0",
    "@pinia/nuxt": "^0.4.11",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/ui": "^0.30.1",
    "@vue-macros/nuxt": "^1.9.9",
    "@vue-macros/volar": "^0.9.8",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^9.13.0",
    "@vueuse/nuxt": "^10.7.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vitest": "^0.1.5",
    "eslint-plugin-vue": "^9.19.2",
    "histoire": "^0.15.9",
    "jsdom": "^21.1.2",
    "nuxt": "^3.8.2",
    "nuxt-vitest": "^0.6.12",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "playwright": "1.32.1",
    "prettier": "^2.8.8",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "unplugin-vue-macros": "^2.7.2",
    "vite": "^4.5.1",
    "vitest": "^0.29.8",
    "vitest-environment-nuxt": "^0.6.12",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0",
    "vue-eslint-parser": "^9.3.2",
    "vue-i18n": "9.3.0-beta.17"
  }
}
